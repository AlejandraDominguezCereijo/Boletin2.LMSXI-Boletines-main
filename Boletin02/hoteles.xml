<?xml version="1.0" encoding="UTF-8"?>
<!-- Completar este documento para registrar hoteles,
    donde tengas nombre, teléfono, dirección(calle y número),
    ciudad, país, numero de estrellas, descripción del hotel,
    número habitaciones individuales, habitaciones dobles,
    habitaciones triples, suites.
    Probar si es un documento bien formado.
-->
<!DOCTYPE registro [

    <!ELEMENT registro (nombre,telefono,direccion,ciudad,pais,estrellas,descripcion,habitaciones)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT telefono (#PCDATA)>
    <!ELEMENT direccion (calle,numero)>
    <!ELEMENT calle (#PCDATA)>
    <!ELEMENT numero (#PCDATA)>
    <!ELEMENT ciudad (#PCDATA)>
    <!ELEMENT pais (#PCDATA)>
    <!ELEMENT estrellas (#PCDATA)>
    <!ELEMENT descripcion (#PCDATA)>
    <!ELEMENT habitaciones (individuales,dobles,triples,suits)>
    <!ELEMENT individuales (#PCDATA)>
    <!ELEMENT dobles (#PCDATA)>
    <!ELEMENT triples (#PCDATA)>
    <!ELEMENT suits (#PCDATA)>
]>

<registro>
    <nombre>Marea</nombre>
    <telefono>600202020</telefono>
    <direccion>
        <calle>Wallaby</calle>
        <numero>42</numero>
    </direccion>
    <ciudad>Sidney</ciudad>
    <pais>Australia</pais>
    <estrellas>5</estrellas>
    <descripcion>Hotel para toda la familia</descripcion>
    <habitaciones>
        <individuales>20</individuales>
        <dobles>12</dobles>
        <triples>8</triples>
        <suits>4</suits>
    </habitaciones>
</registro>